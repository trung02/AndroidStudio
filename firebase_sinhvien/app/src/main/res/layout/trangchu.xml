<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DangNhap">

    <ListView
        android:id="@+id/lvComputer"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/edittextdn"
        >
    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        >

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/edtNhapTen"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/edittextdn"
            android:hint="Nhập tên sinh viên"
            android:textColor="@color/black"

            >

        </EditText>
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/edtNhapLop"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Nhập lớp"
            android:background="@drawable/edittextdn"
            android:textColor="@color/black"
            >
        </EditText>
    </LinearLayout>
    <Button
        android:id="@+id/btthemm"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Thêm"
        android:layout_gravity="center"
        >
    </Button>
</LinearLayout>